doctype html
html(lang="en")
    include includes/head

    body
        header
            include includes/nav
        .container
            .columns
                .column.is-6
                    h1.title Course Information
            .columns
                .column.is-6
                    form(action='/uploadCourses', enctype='multipart/form-data', method='post')
                        .field
                            .file.has-name
                                label.file-label
                                    input.file-input(type='file' name='course_upload', id='course_upload', accept='.csv')
                                    span.file-cta
                                        span.file-icon
                                            i.fas.fa-upload
                                        span.file-label
                                            | Choose a file&mldr;
                                    span.file-name#course_file_name
                                        |
                        .field
                            input.button.is-primary(type='submit', value='Upload')
